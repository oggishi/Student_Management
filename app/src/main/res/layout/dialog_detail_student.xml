<!-- res/layout/dialog_add_student.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shapeAppearanceOverlay="@style/roundedImage"
        android:src="@drawable/no_image"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_idDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STU564"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Họ và Tên"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_nameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ngày sinh "
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_birthdayDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dd/mm/yy"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lớp"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_classDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Lớp"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giáo viên"
            android:layout_gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Khoa"
            android:layout_gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_facultyDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công nghệ thông tin"
            android:textSize="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>





</LinearLayout>
